<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Izone.View.MediaPage">
    <RefreshView x:Name="refreshView">
        <StackLayout>
            <MediaElement x:Name="mediaView"
                          AutoPlay="True"
                          ShowsPlaybackControls="True"
                          MediaOpened="mediaView_MediaOpened"
                          MediaEnded="mediaView_MediaEnded"
                          MediaFailed="mediaView_MediaFailed"
                          VerticalOptions="FillAndExpand"/>
            <StackLayout Orientation="Horizontal"
                         Padding="8">
                <Button Text="Previous"
                        HorizontalOptions="Start"
                        x:Name="btnPrevious"
                        Clicked="btnPrevious_Clicked"/>
                <Picker Title="Select a single"
                        x:Name="pickerSingle"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        ItemsSource="{Binding .}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedIndexChanged="pickerSingle_SelectedIndexChanged"/>
                <Button Text="Next"
                        HorizontalOptions="End"
                        x:Name="btnNext"
                        Clicked="btnNext_Clicked"/>
            </StackLayout>
        </StackLayout>
    </RefreshView>
</ContentPage>